{
  "name": "employee-management-backend",
  "version": "1.0.0",
  "description": "High-performance Employee Management API with Fastify",
  "main": "dist/server.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts --quiet",
    "clean": "rmdir /s /q dist 2>nul || echo Clean completed",
    "db:generate": "prisma generate --no-hints",
    "db:push": "prisma db push --accept-data-loss --skip-generate",
    "db:seed": "node seed.js",
    "db:reset": "prisma db push --force-reset && yarn db:seed"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/static": "^8.0.0",
    "@prisma/client": "^6.17.1",
    "@types/node": "^20.11.0",
    "concurrently": "^9.0.2",
    "fastify": "^5.2.1",
    "prisma": "^6.17.1",
    "typescript": "~5.3.3",
    "vitest": "^1.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",

    "supertest": "^6.3.3",
    "tsx": "^4.7.0"
  }
}
